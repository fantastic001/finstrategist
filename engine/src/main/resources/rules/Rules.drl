        CompanyInfo(ticker == $ticker, $assets : assets, $liabilities : liabilities, $liabilities / $assets > (float) config.getProperty("qr_threshold", 1))
    then 
        modify($estimate) {
            setRisk((float) 1.2*$risk)
        }
    end


