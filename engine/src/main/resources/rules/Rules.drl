// Estimation 

rule "If there is no prepared decision for given stock and given day but there is estimation, initial create decision"
    agenda-group "estimate"
    when 
        Stock($name : ticker, date == LocalDate.now())
        exists Estimate(ticker == $name, date == LocalDate.now())
        not (exists Decision(ticker == $name, date == LocalDate.now()))
    then 
        logger.log("Creating empty decision for " + $name);
        insert(new Decision($name, LocalDate.now(), 0, null));
end



// Decision making

rule "Decision making for buy"
    agenda-group "decide"
    when 
        Stock($name : ticker, date == LocalDate.now())
        $decision : Decision(ticker == $name, date == LocalDate.now(), action == null)
        accumulate(Estimate(ticker == $name, date == LocalDate.now(), $g : growth, $r : risk);
            $expected_growth : average($g),
            $expected_risk : average($r);
            $expected_growth > eval((float)config.getProperty("expected_growth", 1.1)),
            $expected_risk < eval((float)config.getProperty("expected_risk", 0.04))
        )
    then 
        logger.log("Found undecided estimation");
        modify($decision) {
            setAction(Action.BUY)
        };
        modify($decision) {
            setCount((int) 
                (
                    ($expected_growth - (double) config.getProperty("expected_growth", 1.1)) / ((double)config.getProperty("growth_resolution", 0.1))
                )
            )
        };
end



rule "Decision making for sell"
    agenda-group "decide"
    when 
        Stock($name : ticker, date == LocalDate.now())
        $decision : Decision(ticker == $name, date == LocalDate.now(), action == null)
        accumulate(Estimate(ticker == $name, date == LocalDate.now(), $g : growth, $r : risk);
            $expected_growth : average($g),
            $expected_risk : average($r);
            $expected_growth < eval((float)config.getProperty("expected_growth", 1.1)),
            $expected_risk > eval((float)config.getProperty("expected_risk", 0.04))
        )
    then 
        logger.log("Found undecided estimation");
        modify($decision) {
            setAction(Action.SELL)
        };
        modify($decision) {
            setCount((int) (($expected_growth - (double) config.getProperty("expected_growth", 1.1)) / (double)config.getProperty("growth_resolution", 0.1)))
        }
end

// Portfolio decision 

rule "Portfolio decisions - buying with enough cash"
    agenda-group "portfolio"
    no-loop
    when 
        Decision($name : ticker, date == LocalDate.now(), action == Action.BUY, $count : count)
        Stock(ticker == $name, date == LocalDate.now(), $price : close)
        $portfolio : Portfolio(cash >= $price * $count, $cash : cash )
        $asset : PortfolioAsset(ticker == $name, $asset_count : count)
    then 
        modify ($asset) {
            setCount($asset_count + $count)
        }
        modify ($portfolio) {
            setCash($cash - $price * $count)
        }
end 


rule "Portfolio decisions - buying without enough cash"
    agenda-group "portfolio"
    no-loop
    when 
        $decision : Decision($name : ticker, date == LocalDate.now(), action == Action.BUY, $count : count)
        Stock(ticker == $name, date == LocalDate.now(), $price : close)
        $portfolio : Portfolio(cash < $price * $count, $cash : cash )
        $asset : PortfolioAsset(ticker == $name, $asset_count : count)
    then 
        int newCount = (int) ($cash / $price);
        modify ($decision) {
            setCount(newCount)
        }
        modify ($asset) {
            setCount($asset_count + newCount)
        }
        modify ($portfolio) {
            setCash($cash - $price * newCount)
        }
end 


rule "Portfolio decisions - selling existing assets"
    agenda-group "portfolio"
    no-loop
    when 
        Decision($name : ticker, date == LocalDate.now(), action == Action.SELL, $count : count)
        Stock(ticker == $name, date == LocalDate.now(), $price : close)
        $portfolio : Portfolio($cash : cash)
        $asset : PortfolioAsset(ticker == $name, $asset_count : count, count >= $count)
    then 
        modify ($asset) {
            setCount($asset_count - $count)
        }
        modify ($portfolio) {
            setCash($cash + $price * $count)
        }
end 

rule "Portfolio decisions - selling non-existing assets"
    agenda-group "portfolio"
    no-loop
    when 
        Decision($name : ticker, date == LocalDate.now(), action == Action.SELL, $count : count)
        Stock(ticker == $name, date == LocalDate.now(), $price : close)
        $portfolio : Portfolio($cash : cash)
        $asset : PortfolioAsset(ticker == $name, $asset_count : count, count < $count)
    then 
        modify ($asset) {
            setCount(0)
        }
        modify ($portfolio) {
            setCash($cash + $price * $asset_count)
        }
end 

rule "Increase cash for every dividend paid on given date"
    agenda-group "portfolio"
    no-loop
    when 
        Stock($name : ticker, date == LocalDate.now(), $price : dividend)
        Stock(ticker == $name, date == eval(LocalDate.now().minusDays(1)), dividend != $price)
        PortfolioAsset(ticker == $name, $count : count)
        $portfolio : Portfolio($cash : cash)
    then 
        modify ($portfolio) {
            setCash($cash + $price * $count)
        }
end 

// options rules

rule "CALL options: When payoff is larger than predefined value, increase cash in portfolio"
    agenda-group "portfolio"
    when 
        Option(maturityDate == LocalDate.now(), payoff > eval((float) config.getProperty("call_payoff_threshold", 0)), type == "CALL", $payoff : payoff)
        $portfolio : Portfolio($cash : cash)
    then 
        modify ($portfolio) {
            setCash((float) ($cash + $payoff))
        }
end 

rule "PUT options: When payoff is larger than predefined value, increase cash in portfolio"
    agenda-group "portfolio"
    when 
        Option(maturityDate == LocalDate.now(), payoff > eval((float) config.getProperty("put_payoff_threshold", 0)), type == "PUT", $payoff : payoff)
        $portfolio : Portfolio($cash : cash)
    then 
        modify ($portfolio) {
            setCash((float) ($cash + $payoff))
        }
end 
